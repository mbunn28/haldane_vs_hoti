#!/usr/bin/env python3
# -*- coding: utf-8 -*-
import ti
import numpy as np
import matplotlib
import matplotlib.pyplot as plt

lattice = ti.Lattice(
PBC_i = True,
PBC_j = True,
Corners = False,
alpha = 1,
hal = 1,
M=0,
N=7)

lattice.large_alpha = False
lattice.large_hal = False

#lattice.phase_diagram(s=50,t=50)
lattice.single_state()
